reattach_lxc_interfaces() {
    running=$(lxc-ls --running)
    for container in $running;
    do
        veth=$(lxc-info "$container" | grep Link | awk '{print $2}')
        bridge=$(grep link /srv/lxc/"$container"/config | awk '{print $3}')

        brctl addif "$bridge" "$veth"
    done
}

# what interface/action should trigger this?
if [ "$ACTION" = ifup ] && [ "$DEVICE" = br-lan ]; then
    reattach_lxc_interfaces
fi
