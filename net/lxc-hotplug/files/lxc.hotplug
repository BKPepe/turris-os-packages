LAN_BRIDGE_IF="br-lan"
LXC_IF_PREFIX="veth"

reattach_lxc_interfaces() {
    for inf in /sys/class/net/*
    do
        ifname=$(basename "$inf")
        if [ "$ifname" != "${ifname#$LXC_IF_PREFIX}" ]; then
            brctl addif $LAN_BRIDGE_IF "$ifname"
        fi
    done
}

if [ "$ACTION" = ifup ] && [ "$DEVICE" = "$LAN_BRIDGE_IF" ]; then
    reattach_lxc_interfaces
fi
