diff --git a/src/mod_proxy.c b/src/mod_proxy.c
index 3b87785..b101baf 100644
--- a/src/mod_proxy.c
+++ b/src/mod_proxy.c
@@ -494,6 +494,10 @@ static int proxy_create_env(server *srv, handler_ctx *hctx) {
