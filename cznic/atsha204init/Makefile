include $(TOPDIR)/rules.mk

PKG_NAME:=atsha204init
PKG_VERSION:=1
PKG_SOURCE_PROTO:=git
PKG_SOURCE_URL:=ssh://git@git.nic.cz/router/libatsha204
PKG_SOURCE_VERSION:=3883bfec4aa771eb63d519300622a451c0516e2f
PKG_SOURCE:=$(PKG_NAME)-$(PKG_SOURCE_VERSION).tar.gz
PKG_SOURCE_SUBDIR:=$(PKG_NAME)
PKG_MAINTAINER:=Robin Ob≈Ørka <robin.oburka@nic.cz>
PKG_BUILD_DIR:=$(BUILD_DIR)/$(PKG_NAME)

include $(INCLUDE_DIR)/package.mk

define Package/$(PKG_NAME)
	TITLE:=$(PKG_NAME)
	DEPENDS:=+libopenssl +libunbound +unbound
endef

define Build/Compile
	$(MAKE_VARS) $(MAKE) -C $(PKG_BUILD_DIR) $(MAKE_FLAGS) NO_DOC=1 USE_LAYER=USE_LAYER_NI2C STATIC_LOCAL=1 ENDPOINT=ENDPOINT_REMOTE VERBOSE=1
endef

define Package/$(PKG_NAME)/install
	$(INSTALL_DIR) $(1)/usr/bin
	$(INSTALL_BIN) $(PKG_BUILD_DIR)/bin/chipinit $(1)/usr/bin/
	$(INSTALL_BIN) $(PKG_BUILD_DIR)/bin/chiptest $(1)/usr/bin/
	$(INSTALL_BIN) $(PKG_BUILD_DIR)/bin/chiptools $(1)/usr/bin/
endef


$(eval $(call BuildPackage,$(PKG_NAME)))
